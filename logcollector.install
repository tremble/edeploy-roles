src="$1"
dir="$2"
version="$3"

ROLE=logcollector

ORIG=$(cd $(dirname $0); pwd)

. ${ORIG}/functions
. ./repositories

declare -A packages
packages=(
    ["deb"]="elasticsearch openjdk-7-jdk td-agent git puppet facter hiera ntp ruby-dev build-essential apache2 libcurl4-gnutls-dev rsyslog-relp rsyslog-gnutls"
    ["rpm"]="elasticsearch java-1.7.0-openjdk git puppet facter hiera ntp ruby-devel httpd rsyslog-relp rsyslog-gnutls"
)

install_ib_if_needed $ORIG $dir

# Install repositories
add_puppet_repository $DIST
add_fluentd_repo
add_elasticsearch_repo
update_repositories $dir

case "$OS" in
    "RedHatEnterpriseServer")
        case "$CODENAME_MAJOR" in
            7)
                attach_pool_rh_cdn $dir $RHN_CDN_POOL_ID
                add_rh_cdn_repo $dir rhel-7-server-optional-rpms
                ;;
        esac
       ;;
esac

# Install packages
install_packages $dir ${packages[$(package_type)]}
case "$OS" in
    "CentOS"|"RedHatEnterpriseServer")
        case "$CODENAME_MAJOR" in
            6)
              install_packages $dir td-agent libcurl-openssl-devel
            ;;
            7)
              install_packages $dir libcurl-devel gcc
              cp $SRC/files/td-agent-2.0.3-0.el7.x86_64.rpm ${dir}/tmp/
              do_chroot ${dir} yum -y localinstall /tmp/td-agent-2.0.3-0.el7.x86_64.rpm
            ;;
        esac
    ;;
esac

# Install Kibana3
do_chroot ${dir} git clone https://github.com/elasticsearch/kibana.git /opt/kibana3

# Install fluentd-elasticsearch plugin
do_chroot ${dir} /opt/td-agent/embedded/bin/fluent-gem install fluent-plugin-elasticsearch

remove_puppet_repository $DIST
remove_epel_repository $DIST
remove_elasticsearch_repo $DIST
remove_fluentd_repo $DIST
clear_packages_cache $dir

# TODO (spredzy) : This is specific for the CI and the current
# way it is deployed. (Using kibana3 in the puppet module will overwrite
# puppetmaster and puppetdashboard configuration) resulting in a non
# fonctional system
case "$OS" in
    "Debian" | "Ubuntu")
        cat > $dir/etc/apache2/sites-available/kibana3 <<EOF
NameVirtualHost *:8300
Listen 8300

<VirtualHost *:8300>
    ## Vhost docroot
    DocumentRoot "/opt/kibana3/src"
    ## Directories, there should at least be a declaration for /opt/kibana3/src
    <Directory "/opt/kibana3/src">
      Options Indexes FollowSymLinks MultiViews
      AllowOverride None
      Order allow,deny
      Allow from all
    </Directory>
    ## Logging
    ErrorLog "/var/log/apache2/kibana3_error.log"
    ServerSignature Off
    CustomLog "/var/log/apache2/kibana3_access.log" combined
</VirtualHost>
EOF
        do_chroot ${dir} a2ensite kibana3
        ;;
    "CentOS"|"RedHatEnterpriseServer")
        cat > $dir/etc/httpd/conf.d/25-kibana.conf <<EOF
NameVirtualHost *:8300
Listen 8300

<VirtualHost *:8300>
    ## Vhost docroot
    DocumentRoot "/opt/kibana3/src"
    ## Directories, there should at least be a declaration for /opt/kibana3/src
    <Directory "/opt/kibana3/src">
      Options Indexes FollowSymLinks MultiViews
      AllowOverride None
      Require all granted
    </Directory>
    ## Logging
    ErrorLog "/var/log/httpd/kibana3_error.log"
    ServerSignature Off
    CustomLog "/var/log/httpd/kibana3_access.log" combined
</VirtualHost>
EOF
        ;;
esac
